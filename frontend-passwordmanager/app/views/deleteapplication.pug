extends template

block content
  div.logo
    img.logo__svg(src='/imgs/logo-lock.svg' alt='lock logo')
    p.danger insert application name to delete it
  div#error-message

  form.form#delete-application
    label.form__label(for='applicationName') application name
    input.form__input(type='text' name='applicationName' placeholder='application name...')
    button.button(type="submit") delete application